<%# encoding: utf-8 %>

<section id="fluidGridSystem">
  <h3>人员</h3>
  <% User.all.each do |user| %>
    <%= image_tag(user.avatar_url(:small), :class => "avatar") %>
    <%= user.nickname %>
  <% end %>

  <h3>任务</h3>
  <div id="tasklist">
    <% @tasks.each do |task| %>
      <%= render :partial => 'note', :locals => { :task => task } %>
    <% end %>
  </div>

  <%= render 'form' %>

</section>
