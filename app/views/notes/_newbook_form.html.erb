<h2 class="title">书籍</h2>
<div class="inner">
  <%= form_for @note, :html => {:multipart => true, :class => "form"} do |f| %>
    <% if @note.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

        <ul>
          <% @note.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="group">
      <%= f.label '上传书籍：' %><br />
      <%= f.file_field :book %>
    </div>

    <div class="group">
      <%= f.label '摘要：' %><br />
      <%= f.text_area :description, :rows => 3 %>
    </div>

    <div class="group">
      <%= f.hidden_field :kind %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
