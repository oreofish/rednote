<%# encoding: utf-8 %>

<div class='well'>
  <section id="fluidGridSystem">
    <div class="btn-group" data-toggle="buttons-radio">
      <% @projects.each do |project| %>
      <% css_class = ( @project_name == project.name ? 'btn active' : 'btn' ) %>
      <%= link_to "#{project.name}(#{project.count})", project_path(project.name), :class => css_class %>
      <% end %>
    </div>

    <hr>

    <div class="" id="myself">
      <div id="projecttab">
        <ul class="nav nav-tabs">
          <li class='active'><%= link_to "相关知识", knowledgebase_projects_path, :remote => true, "data-toggle" => "tab", "data-target" => "#" %></li>
          <li><%= link_to "任务进度", tasks_path(:project => @project_name), :remote => true, "data-toggle" => "tab", "data-target" => "#" %></li>
          <li><%= link_to "回顾", history_tasks_path(:project => @project_name), :remote => true, "data-toggle" => "tab", "data-target" => "#" %></li>
        </ul>
      </div>

      <div id="projectcontent">
        <%= render 'knowledgebase' %>
      </div>
    </div>
  </section>
</div>

