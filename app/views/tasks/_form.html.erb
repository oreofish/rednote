<%# encoding: utf-8 %>

<section id="fluidGridSystem">
<div class="page-header">
  <h2>创建新任务</h2>
</div>

<div class="row-fluid">
<%= form_for @task, :url => tasks_path, :html => { :class => :form } do |f| %>
<div class="">
  <%= f.text_field :content, :class => 'input-xxlarge', :placeholder => "内容" %>
  <button class="btn btn-primary" type="submit">创建任务</button>
</div>
<% end %>
</div>
</section>