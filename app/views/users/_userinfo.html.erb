<div class ="row">
    <div class ="span3">
        <%= link_to image_tag(current_user.avatar_url(:thumb)), users_nickname_path %>
    </div>
    <div class ="span3">
        <h2 class="title"> 
            <%= @user.nickname %>
        </h2>
        <p>发布数: <%= @notes_size %></p>
        <p>创建时间: <%= @user.created_at%></p>
        <p>上次登录时间: <%= @user.last_sign_in_at%></p>
        <p>上次登录ip: <%= @user.last_sign_in_ip%></p>
        <p>登录次数: <%= @user.sign_in_count%></p>
        <div class="progress">
            <div class="bar" style="width: 44%;">
            </div>
        </div>
    </div>
</div>
