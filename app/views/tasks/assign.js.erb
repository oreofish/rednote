<%# encoding: utf-8 %>

(function() {
<% if @user %>
  $('#task<%= @task.id %>').fadeOut(1000,function(){
    $(this).remove();
  } );
  $('#user<%= @user.id %>')
      .replaceWith("<%= j render :partial => 'tasks/smallinfo', :locals => { :user => @user } %>");
<% else %>
  alert('请先为任务估算时间，再分配责任人。');
<% end %>
}());
