<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="i-bar"></span>
        <span class="i-bar"></span>
        <span class="i-bar"></span>
      </a>

      <%= link_to 'Red Note', notes_path, :class => "brand" %>

      <div class="container nav-collapse">
        <ul class="nav">
          <% if user_signed_in? %>
            <li class='<%= "active" if controller_name == "notes" %>'>
            <%= link_to "首页", notes_path %>
            </li>
            <li class='<%= "active" if controller_name == "users" %>' id="mynote_notice">
            <% noticenum = current_user.notes.sum("message")%>
            <% if noticenum == 0 %>
              <%= link_to "#{noticenum}", users_path, :id => "update_info", :style => "display:none" %>
            <% else %>
              <%= link_to "#{noticenum}", users_path, :id => "update_info" %>
            <% end %>
            <%= link_to "我的主页", users_path %>
            </li>
            <li class='<%= "active" if controller_name == "tasks" %>'>
            <%= link_to "我的任务", tasks_path %>
            </li>
          <% end %>
        </ul>

        <ul class="pull-right nav">
            <% if user_signed_in? %>
                <li class="dropdown" id="user-menu">
                <%= link_to "#user-menu", :class => "dropdown-toggle", "data-toggle" => "dropdown" do %>
                    <%= current_user.email %><b class="caret"></b>
                <% end %>
                <ul class="dropdown-menu">
                    <li>
                    <%= link_to users_nickname_path do %>
                        <i class="icon-cog"></i> 设置
                    <% end %>
                    </li>
                    <li class="divider"></li>
                    <li>
                    <%= link_to destroy_user_session_path, :method => :delete do %>
                        <i class="icon-off"></i> 退出
                    <% end %>
                    </li>
                </ul>
                </li>
            <% else %>
                <% if controller_name == "sessions" %>
                    <li><%= link_to "注册", new_registration_path(resource_name) %></li>
                <% else %>
                    <li><%= link_to "登录", new_user_session_path %></li>
                <% end %>
            <% end %>
        </ul>

      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>

