<%# encoding: utf-8 %>

<div class='well'>
  <section id="fluidGridSystem">
    <h3>项目</h3>

    <div class="form-actions">
      <div class="btn-group" data-toggle="buttons-radio">
        <% @projects.each do |project| %>
          <% css_class = ( @project_name == project.name ? 'btn active' : 'btn' ) %>
          <%= link_to "#{project.name}(#{project.count})", project_path(project.name), :class => css_class %>
        <% end %>
      </div>
    </div>


    <div class="" id="myself">
      <div id="tasktab">
        <ul class="nav nav-tabs">
          <li class='active'><%= link_to "基本信息", '#', :remote => true, "data-toggle" => "tab", "data-target" => "#" %></li>
          <li><%= link_to "任务进度", tasks_path(:project => @project_name), :remote => true, "data-toggle" => "tab", "data-target" => "#" %></li>
          <li><%= link_to "相关知识", '#', :remote => true, "data-toggle" => "tab", "data-target" => "#" %></li>
        </ul>
      </div>

      <div id="taskcontent">
        <%= render 'baseinfo' %>
      </div>
    </div>
  </section>
</div>

