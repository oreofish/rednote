- # encoding: utf-8

.board
  %ul.nav.nav-pills
    %li.active
      = link_to "项目", "#project-session"
    %li
      = link_to "人员", "#avatar-session"
    %li
      = link_to "任务", "#taskcontent"
    %li
      = link_to "回顾", "#historycontent"

  .page-header#project-session
    %h1
      项目
      %small 项目列表
  .btn-group{ "data-toggle" => "buttons-radio" }
    - @projects.each do |project|
      - css_class = ( @project_name == project.name ? 'btn active' : 'btn' )
      = link_to "#{project.name}(#{project.count})", project_path(project.name), :class => css_class

  .page-header#avatar-session
    %h1
      人员
      %small 本项目参与人员
  - User.all.each do |user|
    = render :partial => 'tasks/smallinfo', :locals => { :user => user }

  #taskcontent
    = link_to "任务", tasks_path(:project => @project_name), :id => "taskprogresslink", :remote => true
  #historycontent
    = link_to "回顾", history_tasks_path(:project => @project_name), :id => "oldtasklink", :remote => true

