<%# encoding: utf-8 %>
<div class='block' id='block-signup'>
  <h2>注册</h2>
  <div class='content'>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="group wat-cf">
			<div class="left">
				<label class="label">帐号：</label>
			</div>
			<div class="right">
				<%= f.nickname_field :nickname %>
			</div>
			<span class="description">muhaha</span>
		</div>

		<div class="group wat-cf">
      <div>
				<%= f.label "邮箱：" %><br/>
      	<%= f.email_field :email %></div>
      	<span class='description'>Ex. test@example.com</span>
    	</div>
		</div>

    	<div class="group wat-cf">
      	<div>
					<%= f.label :password %><br />
      		<%= f.password_field :password %></div>
      	<span class='description'>至少6个字符</span>
    	</div>

    <div class="group wat-cf">
      <div><%= f.label '确认密码'%><br />
      <%= f.password_field :password_confirmation %></div>
    </div>
    <br />
    <div class="group wat-cf navform">
      <button class='button' type='submit'>
        <%= image_tag "web-app-theme/icons/key.png"%>注册
      </button>
    <% end %>
    <br />
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>
