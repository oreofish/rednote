(function() {
    var $item = $('#note<%= @note.id %>').find('div.item');
    var $link = $item.find('a.comments_link');
    $link.text( $link.text().replace(/\d+/, <%= @comments.length %>) );
    $link.attr("href","<%= comments_dono_path(:note_id => @note.id )%>");

    var $list = $item.find('div.comments_list');
    $list.html( "<%= j render( 'comment_box') %>" );
    $list.find('#comment_comment').focus();
    

    <% if @note.user_id == current_user.id  %>
      $item.removeClass("label-info");
      $num = $('#update_info');
      $num.text( $num.text().replace(/\d+/, <%= current_user.notes.sum("message") %>) );
    <%end%>
}());
