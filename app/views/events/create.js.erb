<%# encoding: utf-8 %>

(function() {
<% if @event %>
  <% if @event.valid? %>
    $('#calendar').fullCalendar( 'refetchEvents' );
    $('#create_event_dialog').dialog('destroy');
  <% else %>
    <%= @event.errors.full_messages().join("\n") %>
  <% end %>
<% end %>

<% if @event_series %>
  <% if @event_series.valid? %>
    $('#calendar').fullCalendar( 'refetchEvents' );
    $('#create_event_dialog').dialog('destroy');
  <% else %>
    <%= @event_series.errors.full_messages().join("\n") %>
  <% end %>
<% end %>
}());
