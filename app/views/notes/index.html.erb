<%# encoding: utf-8 %>

<div class="block">
  <div class="secondary-navigation"></div>

  <div class="notes_main">
    <div class="note_publish">
      <div class="title">
        <p>wirte a note</p>
      </div>

      <div class="inner">
        <%= form_for(@note, :html => { :class => "form"}) do |f| %>
          <div class="input">
            <%= f.text_area :summary, :rows => 4 %>
          </div>

          <div class="actions">
            <%= f.submit %>
          </div>

          <div class="attachments">
            <%= link_to "图片", "javascript:void(0);", :class => "image" %>
            <%= link_to "链接", "javascript:void(0);", :class => "link" %>
            <%= link_to "书籍", "javascript:void(0);", :class => "book" %>
            <%= link_to "代码", "javascript:void(0);", :class => "code" %>
            <%= link_to "文本", "javascript:void(0);", :class => "text" %>

            <!-- attachment_block stub for insertion of attachment elements -->
            <div id="attachment_block" style="display: none;">
            </div> 
          </div><!-- attachments end -->
        <% end %> <!-- form end -->

      </div>

    </div>

    <div class="notes_content">
      <ul class="list">
        <%= render "list" %>
      </ul>
    </div>
  </div>
</div>
