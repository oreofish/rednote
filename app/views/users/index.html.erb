<h2 class="title">Users#info</h2>
<div class="block">
	<p>用户图像</p>
	<p><%= @nickname %></p>
	<p>发布数: <%= @notes_size %></p>
</div>

<div class="block">
	<div class="secondary-navigation">
		<ul class="wat-cf">
			<li class="first active"><a href="">全部动态</a></li>
			<li><a href="">分享</a></li>
		</ul>
	</div>
	<div class="content">
		<ul class="list">
    	<% if @notes_size == 0 %>
    		<p> 你还没有分享!!</p>
    	<% else %>
     		<p> 分享列表!!</p>
      	<% @notes.each do |note| %>
      		<li><%= note %></li>
      	<% end %>
    	<% end %>
		</ul>
	</div>
</div>
