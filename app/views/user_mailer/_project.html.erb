<div class="header" style="font-family: 'Helvetica Neue', helvetica, sans-serif; margin: 0 0 20px; padding: 0;">
  <table border="0" cellspacing="0" cellpadding="0" style="background-color: #ffffff; width: 100%; text-align: left; border-collapse: collapse; border-spacing: 0; -premailer-cellspacing: 0; -premailer-cellpadding: 0; -premailer-width: 100%; margin: 0; padding: 0; border: 0;" bgcolor="#ffffff" width="100%">
    <tr>
      <th style="width: 1%; white-space: nowrap; vertical-align: middle; padding: 0;" valign="middle">
        <h2 style="font-weight: bold; font-family: 'Helvetica Neue', helvetica, sans-serif; font-size: 20px; line-height: 24px; display: inline; color: black; padding-bottom: 15px; background-color: #ffffff; margin: 0;">
          <%= link_to project.name, project_url(project), :style => "color: black; text-decoration: none;" %>
        </h2>
      </th>
      <td style="text-align: left; vertical-align: middle; font-size: 14px; line-height: 19px; font-family: 'Helvetica Neue', helvetica, sans-serif; color: #000000; width: 49%; background-color: #ffffff;" align="left" bgcolor="#ffffff" valign="middle">
        <hr style="border-bottom-color: #e5e5e5; border-bottom-width: 1px; margin: 0; padding: 0; border-style: none none solid;">
      </td>
    </tr>
  </table>
</div>
<div class="section contributors" style="margin: 0 0 10px; padding: 0;">
  <div class="header" style="font-family: 'Helvetica Neue', helvetica, sans-serif; overflow: visible; height: auto; margin: 0; padding: 0; border: none;">
    <h3 style="font-weight: bold; font-family: 'Helvetica Neue', helvetica, sans-serif; font-size: 14px; line-height: 20px; color: #AA9C84; margin: 4px 0;">
      <% @project_users[project.id] = @project_users[project.id].uniq %>
      有<%= @project_users[project.id].length %>人提交任务
    </h3>
  </div>
  <div class="article event" style="font-size: 14px; margin-left: 20px; padding: 0 0 6px;">
    <% @project_users[project.id].each do |user_id|%>
      <% user = User.find(user_id)%>
      <%= link_to mytasks_user_url(user), :class => "brand-img", "data-replace-stack" => "true", :style => "color: inherit; text-decoration: none;" do %>
        <%= image_tag user.avatar_url(:small), :size => "45x34", :alt => "Happy Work", :title => "#{user.nickname}", :style => "-webkit-border-radius: 100px; -moz-border-radius: 100px; border-radius: 100px; padding: 0; border: 0;" %>
      <%end%>
    <%end%>
  </div>
</div>
<div class="section todos" style="margin: 0 0 10px; padding: 0;">
  <div class="header" style="font-family: 'Helvetica Neue', helvetica, sans-serif; overflow: visible; height: auto; margin: 0; padding: 0; border: none;">
    <h3 style="font-weight: bold; font-family: 'Helvetica Neue', helvetica, sans-serif; font-size: 14px; line-height: 20px; color: #AA9C84; margin: 4px 0;">
      完成任务<%= @project_tasks[project.id].length %>个
    </h3>
  </div>
  <div class="article event" style="font-size: 14px; margin-left: 20px; padding: 0 0 6px;">
    <div class="group" style="margin: 0 0 10px; padding: 0;">
      <% @project_tasks[project.id].each do |project_task|%>
        <%= render :partial => 'task', :locals => { :task => project_task } %>
      <% end%>
    </div>
  </div>
</div>
