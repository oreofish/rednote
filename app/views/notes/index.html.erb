<%# encoding: utf-8 %>

<div class="well">

  <div id="note_publish">
    <h2 class="title">write a note</h2>
    <%= form_for(@note, :html => { :class => "form", :multipart => true, :remote => true }) do |f| %>
    <div class="input">
      <%= f.text_area :summary, :rows => 4 %>
    </div>

    <div class="tabbable">
      <ul class="nav nav-tabs">
        <li><%= link_to "图片", "javascript:void(0);", :class => "image","data-toggle" => "tab" %></li>
        <li><%= link_to "链接", "javascript:void(0);", :class => "link", "data-toggle" => "tab"  %></li>
        <li><%= link_to "书籍", "javascript:void(0);", :class => "book", "data-toggle" => "tab"  %></li>
        <li><%= link_to "代码", "#1", :class => "code", "data-toggle" => "tab"  %></li>
        <li><%= link_to "文本", "#2", :class => "text", "data-toggle" => "tab"  %></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="1">
          <p>I'm in Section 1.</p>
        </div>
        <div class="tab-pane" id="2">
          <p>Howdy, I'm in Section 2.</p>
        </div>
      </div>
    </div>

    <!-- attachment_block stub for insertion of attachment elements -->
    <div id="attachment_block" style="display: none;"></div> 

    <button type="submit" class="btn btn-primary pull-right">发布</button>    
    <% end %> <!-- form end -->
  </div>

  <div id="notes_content">
    <ul class="list">
      <%= render "list" %>
    </ul>

    <!-- pager loading hinter -->
    <div class="hidden inner" id="pager_loading">
      <span class="pager_loading_spinner">
      </span>
      <span class="pager_loading_text">
        Loading...
      </span>
    </div>
  </div> <!-- notes_content -->

</div>
