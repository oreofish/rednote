
<div class="well" id="userinfo">
  <%= render 'userinfo' %>
</div>

<div class="well" id="myself">
  <div id="tabspin">
  <ul class="nav nav-tabs">
    <li class='active'><%= link_to "我的发布", user_path(@user), :remote => true, "data-toggle" => "tab", "data-target" => "#" %></li>
    <li><%= link_to "我的评论", mycomments_user_path(@user), :remote => true, "data-toggle" => "tab", "data-target" => "#" %></li>
    <li><%= link_to "我的标记", mytags_user_path(@user), :remote => true, "data-toggle" => "tab", "data-target" => "#" %></li>
  </ul>
  </div>

  <div class="mycontent">
    <%= render :partial => 'mytags' if ( controller.action_name == 'show' or controller.action_name == 'mytags') %>
    <%= render :partial => 'mycomments' if ( controller.action_name == 'mycomments') %>
  </div>
</div>
