= form_for @new_answer do |f|
  - if @new_answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@new_answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - @new_answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_area :content, :rows => 2
  .field
    = f.hidden_field :question_id, :value => 0
  .field
    = f.hidden_field :tag_list
  .actions
    %button.btn.btn-primary.pull-right{ :type=>"submit"} 完成

%span.input-mini#pending_tag_list 
  - tags = Answer.tag_counts.map {|tag| tag.name}
  - ds = tags.map{|t| '"' + t + '"'}.join(",")
  = text_field_tag "tag_input", "", "data-provide" => "typeahead", "data-source" => "[#{ds}]", "data-items" => "4", :class => "input-mini", :placeholder => "添加标签"
