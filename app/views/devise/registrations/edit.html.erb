<div class="block">
    <div class="secondary-navigation">
        <ul class="wat-cf">
            <li><%= link_to "修改昵称", users_nickname_path %></li>
            <li><%= link_to "修改头像", users_avatar_path %></li>
            <li><%= link_to "修改密码", edit_user_registration_path, :method => :get %></li>
        </ul>
    </div>
</div>
<%# encoding: utf-8 %>
<div id='block-signup'>
  <h2>修改密码</h2>
  <div class='content'>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>

    <p><%= f.label '当前密码：' %>
    <%= f.password_field :current_password %></p>

    <p><%= f.label '新的密码：' %>
    <%= f.password_field :password %></p>

    <p><%= f.label '确认密码：' %>
    <%= f.password_field :password_confirmation %></p>


    <p>
    <button class='button' type='submit'>
      <%= image_tag "web-app-theme/icons/tick.png"%>修改
    </button>
    <div><%= link_to "进入主页", root_path %></div>
    </p>
    <p></p>
    <% end %>

