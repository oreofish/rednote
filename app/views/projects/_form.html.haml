= simple_form_for @project, :wrapper => :bootstrap do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name
  = f.input :tags
  = f.input :summary
  .actions
    %button.btn.btn-primary.pull-right{:type=>"submit"} 新建项目
