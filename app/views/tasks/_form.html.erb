<%# encoding: utf-8 %>

<div class="form-actions">
  <%= form_tag tasks_path, :class => :form, :remote => true do %>
    <%= text_area :task, :content, :class => 'input-xxlarge', :rows => 2, :placeholder => "任务描述" %>
    <%= hidden_field :project, :name, :value => @current_project %>
    <button class="btn btn-primary" type="submit">添加任务</button>
  <% end %>
</div>
