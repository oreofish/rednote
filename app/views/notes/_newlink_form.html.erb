<h2 class="title">链接</h2>
<div class="inner">
  <%= form_for @note, :html => { :class => "form"} do |f| %>
    <% if @note.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

        <ul>
          <% @note.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div class="group">
      <%= f.label '链接地址' %><br />
      <%= f.text_field :link %>
    </div>

    <div class="group">
      <%= f.label '添加描述' %><br />
      <%= f.text_area :description, :class => "text_area", :rows => 3 %>
    </div>

    <div class="group">
      <%= f.hidden_field :kind %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
