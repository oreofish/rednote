<div class ="row">
    <div class ="span1">
        <%= link_to image_tag(current_user.avatar_url(:small)), users_nickname_path %>
    </div>
    <div class ="span3">
        <p><%= @user.nickname%></p>
        <p>发布数: <%= @notes_size %></p>
        <p>创建时间: <%= @user.created_at.to_s.split.first + " " + @user.created_at.to_s.split.second %></p>
        <p>上次登录: <%= @user.last_sign_in_at.to_s.split.first + " " + @user.last_sign_in_at.to_s.split.second %></p>
    </div>
</div>
