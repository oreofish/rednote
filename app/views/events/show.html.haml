- # encoding: utf-8

.board
  = link_to '日程', events_path, :class => "btn"
  .page-header
    %h3
      日程安排
      %small 日程安排
  .event
    = @event.title
    %br
    = @event.description
    %br
    = @event.start_at 
    %br
    = @event.end_at

  .page-header
    %h3
      评论
      %small 相关讨论
  .taskcomments{:id => "comments_list#{@event.id}"}
    = render 'comments/comment_box'
    = render 'comments/form_task'

  .page-header
    %h3
      历史
      %small 修改记录
  = render 'events/audits'
