<%# encoding: utf-8 %>

(function() {

  var $space = $('#myself').find('div.inner');

  <% if controller.action_name == "index" or controller.action_name == "mytags" %> 
      $space.html( "<%= j render :partial => 'mytags' %>" ); 
  <% else %> 
      $space.html( "<%= j render :partial => 'mycomments' %> " );
  <% end %>;


  var link = "secondary-<%= controller.action_name %>";

  $('#myself div.secondary-navigation ul.wat-cf').find('li').each(function(idx, el) { 
    if ( $(el).attr("id") === link ) {
      $(el).addClass('active');
    } else {
      $(el).removeClass('active');
    }
  } );

  commentsManager.bindHandlers();
  time.updateTime();

})();
