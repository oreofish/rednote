<%# encoding: utf-8 %>

(function() {
  <% if @note.valid?  %>
    $new_note = $('#new_note');
    $notes = $('#notes_content ul.list');
    $notes.prepend( "<%= j render :partial => 'notes/note', :locals => { :note => @note } %>" );
    $new_note[0].reset();
    $('#notes_content').find('ul.list li:first').hide().fadeIn(1000);
    rednote.updateNoteTime();
  <% end %>
}());

