<h2 class="title">发布图片</h2>
<div class="inner">
  <%= form_for @note, :html => {:multipart => true, :class => "form"} do |f| %>
    <% if @note.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>
        <ul>
          <% @note.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="group">
      <%= f.label '上传图片：' -%>
      <%= image_tag(@note.image_url) if @note.image? %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </div>

    <p>或者提供图片的网络地址</p>
    <div class="group">
      <%= f.label '图片链接' %><br />
      <%= f.text_field :link %>
    </div>

    <div class="group">
      <%= f.label '摘要：' %><br />
      <%= f.text_area :description, :class => "text_area", :rows => 3  %>
    </div>

    <div class="group">
      <%= f.hidden_field :kind %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
