<%# encoding: utf-8 %>

<div class='well'>
  <section id="fluidGridSystem">
    <div class="pull-right">
      <%= form_tag new_project_path, :class => :form do %>
      <%= text_field :project, :name, :class => 'input-small', :placeholder => "项目名称" %>
      <button class="btn" type="submit">新建</button>
      <% end %>
    </div>

    <h3>项目</h3>

    <ul>
    <% @projects.each do |project| %>
      <li><%= link_to "#{project.name}(#{project.count})", project_path(project.name) %></li>
    <% end %>
    </ul>

    Show something about all projects here.
  </section>
</div>

