- # encoding: utf-8

.task-view.row-fluid
  - if current_user == @task.user
    .pull-right= link_to "删除任务", @task, :confirm => "确定删除吗?", :method => :delete, :class => "label"
  .row
    %h3.span1 项目：
    .span7= @task.project_list[0]
  .row
    %h3.span1 创建：
    .span7= @task.user.nickname
  .row
    %h3.span1 内容：
    .span7
      = @task.content
  .row
    %h3.span1 估时：
    .span7
      = @task.estimate
  .row

.page-header
  %h3
    评论
    %small 相关讨论
%ul.unstyled{:id => "comments_list#{@task.id}"}
  - @comments.each do |comment|
    = render :partial => "comments/comment", :locals => { :comment => comment }
= render 'comments/form_task'
