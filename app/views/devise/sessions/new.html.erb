<%# encoding: utf-8 %>
<div class="row">
    <div class="span3">
        <div class="tabbable">
            <div class="tab-content row-fluid">
                <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :id => "auth-form" }) do |f| %>
                    <%= f.label "帐号：" %>
                    <%= f.text_field :nickname, :id => "user_login", :class => "span12"%>

                    <%= f.label "密码：" %>
                    <%= f.password_field :password, :id => "user_password", :class => "span12"%>

                    <div class="pull-right">
                        <%= f.submit "登录", :class => "btn" %>
                    </div>
                    <%= f.check_box :remember_me %> 
                    <%= f.label "记住我？" %>
                    <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "forgot-password", :style => "float:left" %>
                <% end %>
            </div>
        </div>
    </div>
</div>
