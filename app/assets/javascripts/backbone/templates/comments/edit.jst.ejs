<h1>Edit comment</h1>

<form id="edit-comment" name="comment">
  <div class="field">
    <label for="title"> title:</label>
    <input type="text" name="title" id="title" value="<%= title %>" >
  </div>

  <div class="field">
    <label for="comment"> comment:</label>
    <input type="text" name="comment" id="comment" value="<%= comment %>" >
  </div>

  <div class="field">
    <label for="commentable_id"> commentable_id:</label>
    <input type="text" name="commentable_id" id="commentable_id" value="<%= commentable_id %>" >
  </div>

  <div class="field">
    <label for="commentable_type"> commentable_type:</label>
    <input type="text" name="commentable_type" id="commentable_type" value="<%= commentable_type %>" >
  </div>

  <div class="actions">
    <input type="submit" value="Update Comments" />
  </div>

</form>

