<%= form_for @user, :html => {:multipart => true} do |f| %>
    <p>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
    <%= f.submit %>
    </p>
<% end %>


<%= image_tag @user.avatar, :id => "cropbox", :date => @user.avatar_geometry[:width] %>
<h3>Preview</h3>
<div class="preview">
    <%= image_tag @user.avatar_url(:large), :id => "preview" %>
</div>
<%= form_for @user, :url => { :action => "crop_update" } do |f| %>
    <% for attribute in [:crop_x, :crop_y, :crop_h, :crop_w] %>
        <%= f.hidden_field attribute, :id => attribute %>
    <% end %>
    <p><%= f.submit "Crop" %></p>
<% end %>

<%= image_tag @user.avatar_url(:thumb) %>
