(function() {
  var $link = $('#comments_link<%= @note.id %>');
  $link.text( $link.text().replace(/\d+/, <%= @comments.length %>) );
  $link.attr("href","<%= dono_comments_path(:note_id => @note.id )%>");

  var $list = $('#comments_list<%= @note.id %>');
  $list.html( "<%= j render( 'comments/comment_box') %>" );
  $list.append( "<%= j render( 'comments/form') %>" );
  $list.find('#comment_comment').focus();

  setTimeout( function() {
    $('.best_in_place').best_in_place();
  }, 100 );
}());
