<%# encoding: utf-8 %>

<div id="task<%= task.id %>" class="stretch-note-container taskitem ui-widget-content <%= task_css(task) %>">
<div id="stretch-full">
  <div class ="pull-left">
    <%= image_tag '/images/todo-note.jpg' %>
  </div>
  <%= task.content %><br />
  估计时间：<%= task.estimate %>

  <div id="edittask<%= task.id %>" taskid="<%= task.id %>" class="taskeditview modal hide fade" style="display: none; ">
    <div class="modal-header">
      <a class="close" data-dismiss="modal">×</a>
      <h3>任务</h3>
    </div>
    <div class="modal-body">
      <h3>Please waiting</h3>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn btn-primary">Save changes</a>
      <a href="#" class="btn">Close</a>
    </div>
  </div>

  <%= link_to "#edittask#{task.id}", :class => "bottom-right", 'data-toggle'=>"modal" do %>
    <i class="icon-edit"></i>
  <% end %>
</div>
</div>
