- # encoding: utf-8

.board
  .pull-right
    = form_tag "/projects", :class => :form, :method => :post do
      = text_field :project, :name, :class => 'input-small', :placeholder => "项目名称"
      %button.btn{ :type=>"submit" } 新建
  .page-header
    %h2
      项目
      %small 
      - @projects.each do |project|
        = link_to "#{project.name}(#{project.count})", project_path(project.name)
  .page-header
    %h2
      时间表
      %small 所有项目时间表
  #calendar