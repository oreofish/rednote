(function() {

  var $space = $('#myself').find('div.mycontent');

  <% if controller.action_name == "show" or controller.action_name == "mytags" %> 
      $space.html( "<%= j render :partial => 'mytags' %>" ); 
  <% elsif controller.action_name == "mytasks" %> 
      $space.html( "<%= j render :partial => 'mytasks' %>" ); 
  <% else %> 
      $space.html( "<%= j render :partial => 'mycomments' %> " );
  <% end %>;


  commentsManager.bindHandlers();
  rednote.updateNoteTime();
})();
